{
    "name": "@arpadroid/tools-iso",
    "version": "0.0.1",
    "description": "Isomorphic utilities for javascript projects that work both in nodejs and browser environments",
    "keywords": [
        "javascript",
        "isomorphic",
        "utilities",
        "tools"
    ],
    "types": "./dist/@types/index.d.ts",
    "type": "module",
    "scripts": {
        "clean:install": "npm run clean && npm install",
        "clean": "rm -rf ./dist ./node_modules package-lock.json",
        "lint": "eslint src/**/*.{js,mjs}",
        "prepublishOnly": "npm run test && npm run lint && npm run build",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "test": "jest",
        "build": "tsc"
    },
    "exports": {
        ".": "./src/index.js",
        "./arrayTool": {
            "types": "./dist/@types/arrayTool/arrayTool.d.ts",
            "default": "./src/arrayTool/arrayTool.js"
        },
        "./csvTool": {
            "types": "./dist/@types/csvTool/csvTool.d.ts",
            "default": "./src/csvTool/csvTool.js"
        },
        "./dateTimeTool": {
            "types": "./dist/@types/dateTimeTool/dateTimeTool.d.ts",
            "default": "./src/dateTimeTool/dateTimeTool.js"
        },
        "./functionTool": {
            "types": "./dist/@types/functionTool/functionTool.d.ts",
            "default": "./src/functionTool/functionTool.js"
        },
        "./objectTool": {
            "types": "./dist/@types/objectTool/objectTool.d.ts",
            "default": "./src/objectTool/objectTool.js"
        },
        "./regexTool": {
            "types": "./dist/@types/regexTool/regexTool.d.ts",
            "default": "./src/regexTool/regexTool.js"
        },
        "./stringTool": {
            "types": "./dist/@types/stringTool/stringTool.d.ts",
            "default": "./src/stringTool/stringTool.js"
        },
        "./urlTool": {
            "types": "./dist/@types/urlTool/urlTool.d.ts",
            "default": "./src/urlTool/urlTool.js"
        },
        "./validationTool": {
            "types": "./dist/@types/validationTool/validationTool.d.ts",
            "default": "./src/validationTool/validationTool.js"
        }
    },
    "files": [
        "src/",
        "scripts/",
        "dist/",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arpadroid/tools-iso.git"
    },
    "author": "Andres Vaquero / @arpadroid",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/arpadroid/tools-iso/issues"
    },
    "homepage": "https://github.com/arpadroid/tools-iso#readme",
    "dependencies": {
        "jest-junit": "^16.0.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.23.9",
        "@eslint/js": "^9.39.1",
        "@jest/globals": "^30.2.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.1",
        "babel-jest": "^30.2.0",
        "eslint": "^9.39.1",
        "globals": "^17.0.0",
        "jest": "^30.2.0",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3"
    }
}
